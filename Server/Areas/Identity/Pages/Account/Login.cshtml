@page
@model LoginModel

<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-8">
        <section class="mb-5">
            <form id="account" method="post">
                <h2>Iniciar sesión.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
                </div>
            </form>
        </section>
         <div class="justify-content-center text-center">
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó su contraseña?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrate</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmacion de correo</a>
                        </p>
                    </div>
                </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
